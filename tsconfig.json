{
  "module": "commonjs",
  "target": "es5",
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": false,
    "strictNullChecks": true,
    "strict": true,
    "alwaysStrict": true,
    "sourceMap": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "pretty": true,
    "listFiles": true,
    "listEmittedFiles": true,
    "lib": ["es5", "es6", "es7"],
    // "module": "esnext",
    "declaration": true,
    "removeComments": false,
    "target": "es5",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["./node_modules/@types"]
  },
  "typeRoots": ["./node_modules/@types"],
  "include": ["./**/*"],
  "exclude": ["node_modules", "*.test.ts", "**/*.spec.ts", "*.js"]
}
